page{
	width: 100%;
	height: 100%;
}
  
.layout {
    width: 100%;
    height: 100% !important;
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.layout .layout-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100% !important;
    position: relative;
    overflow: hidden;
}

.layout .layout-container .layout-menu {
    position: absolute;
    top: 0px;
    bottom: 0px;
    display: flex;
    flex-direction: column;
    width: 60%;
    background: #ccc;
}

.layout .layout-container .layout-menu.left {
    left: 0px;
}

.layout .layout-container .layout-menu.right {
    right: 0px;
}

.layout .layout-container .layout-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    min-height: 44px;
    background-color: #19b394;
}

.layout .layout-container .layout-footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    min-height: 44px;
    background-color: #19b394;
}

.layout .layout-container .layout-body {
    flex: 1;
    overflow-y: auto;
    height: 100% !important;
    width: 100%;
    background-color: #efefef;
}

.left.layout-menu-close {
    left: -100% !important;
    transition: .5s ease;
}

.right.layout-menu-close {
    right: -100% !important;
    transition: .5s ease;
}

.title {
    color: #fff;
    font-size: 1em;
    font-weight: 600;
}

.footer-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    text-align: center;
    cursor: pointer;
    padding: 5px 0px 0px 0px;
}

.footer-item:hover {
    transform: scale(1.1, 1.1);
}